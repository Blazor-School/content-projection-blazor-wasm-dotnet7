@using ContentProjection.Models;
@typeparam T where T : IAnimal

<h3>Animal Detail</h3>
<p>Name: @Animal.Name</p>

@if(DetailTemplate is not null)
{
    @DetailTemplate.Invoke(GetExamineDetail(Animal));
}

@code {
    [Parameter]
    public T Animal { get; set; }

    [Parameter]
    public RenderFragment<string>? DetailTemplate { get; set; }

    private string GetExamineDetail(IAnimal animal) => $"The age is: {Animal.Age}.";
}
